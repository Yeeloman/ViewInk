{
    "compilerOptions": {
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "target": "ES2020",
        "moduleResolution": "Node10",
        "module": "es2020",
        "declaration": true,
        "isolatedModules": true,
        "noEmit": true,
        "outDir": "dist",
        "paths": {
            "viewink": [
                "./src/index.ts"
            ], // Map "viewink" to your entry point
            "viewink/defaults": [
                "./src/defaults.ts"
            ], // Map "viewink/defaults" to your defaults file
            "viewink/types": [
                "./src/types.ts"
            ]
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}